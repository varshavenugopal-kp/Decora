



<div class="p-5">
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Sl.No</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Status</th>
       <th scope="col"></th>
       
    </tr>
  </thead>
 
  <tbody>
     {{#each userList}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{name}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
      {{#if status}}
      <td class="text-success">Active</td>
      <td><a class="btn btn-warning" onclick="return confirm('Are you sure you want to block {{name}}?')" href="/admin/block-user/{{_id}}">Block</a></td>
   
    {{else}}
    <td class="text-danger">Banned</td>
      <td><a class="btn btn-secondary" onclick="return confirm('Are you sure you want to unblock {{name}}?')" href="/admin/unblock-user/{{_id}}">Unblock</a></td>
    {{/if}}

     
{{/each}}
    </tbody>
</table> 
</div>
